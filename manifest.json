{
    "manifest_version": 3,
    "name": "Activate PiP",
    "version": "1.0",
    "description": "Automatically activate Picture-in-Picture mode when the extension is clicked.",
    "action": {
      "default_icon": "popup.png"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "popup.js"
    }
  }
  
  